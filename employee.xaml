<Page x:Class="Laba05041.employee"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Laba05041"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="employee">

    <StackPanel>
        <StackPanel.Background>
            <LinearGradientBrush>
                <LinearGradientBrush.GradientStops>
                    <GradientStop Offset="0.00" Color="#FF87A0DE"/>
                    <GradientStop Offset="0.50" Color="Azure"/>
                    <GradientStop Offset="1.00" Color="#FF009CFF"/>
                </LinearGradientBrush.GradientStops>
            </LinearGradientBrush>
        </StackPanel.Background>
        <Menu>
            <MenuItem Header="Действие">
                <MenuItem Header="Отменить"/>
                <MenuItem Header="Создать"/>
                <MenuItem Header="Редактировать"/>
                <MenuItem Header="Сохранить"/>
                <MenuItem Header="Найти"/>
                <Separator></Separator>
                <MenuItem Header="Удалить"/>
            </MenuItem>
            <MenuItem Header="Отчет"/>
        </Menu>

        <ToolBar Name="Tool1" Margin="3" Height="41">
            <Button Name="Undo" 
                    ToolTip="Отменить редактирование/создание"
                    Margin="5,2,5,2">
                <Image Source="Panel/undo.png" RenderTransformOrigin="0.5,0.5" Height="21" Width="22" >
                    <Image.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform Angle="0.53"/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </Image.RenderTransform>
                </Image>
            </Button>

            <Button Name="Add"
                    ToolTip="Создать сотрудника"
                    Margin="5,2,5,2">
                <Image Source="Panel/plus.png" Height="21" Width="22" />
            </Button>

            <Button Name="Edit"
                    ToolTip="Редактирровать данные"
                    Margin="5,2,5,2">
                <Image Source="Panel/pencil.png" Height="21" Width="22" />
            </Button>

            <Button Name="Find"
                    ToolTip="Найти данные о сотруднике"
                    Margin="5,2,5,2">
                <Image Source="Panel/binoculars.png" Height="21" Width="22" />
            </Button>

            <Button Name="Save"
                    ToolTip="Сохранить изменения"
                    Margin="5,2,5,2">
                <Image Source="Panel/Save.png" Height="21" Width="22" />
            </Button>

            <Button Name="Delet" 
                    ToolTip="Удалить сотрудника" Height="38" Width="34">
                <Image Source="Panel/delete.png" Height="21" Width="22" />
            </Button>
        </ToolBar>

        <TextBlock Margin="5" FontSize="16">Список сотрудников</TextBlock>

        <DataGrid Name="Data">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Фамилия"/>
                <DataGridTextColumn Header="Имя"/>
                <DataGridTextColumn Header="Отчество"/>
                <DataGridTextColumn Header="Должность"/>
                <DataGridTextColumn Header="Дата рождения"/>
                <DataGridTextColumn Header="Телефон"/>
                <DataGridTextColumn Header="Электронная почта"/>
            </DataGrid.Columns>
        </DataGrid>
    </StackPanel>
</Page>
