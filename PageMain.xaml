<Page x:Class="Laba05041.PageMain"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Laba05041"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageMain">

    <StackPanel Background="{StaticResource BackgroundWindowResource}">

        <TextBlock Style="{StaticResource hederTextBlockResource}">
            Система внутренного учета инвестиционной компании
        </TextBlock>


        <TextBlock Style="{StaticResource baseTextBlockResource}">
            <Hyperlink NavigateUri="employee.xaml">Сотрудники</Hyperlink>
        </TextBlock>
        <TextBlock Style="{StaticResource baseTextBlockResource}">
            <Hyperlink NavigateUri="Client.xaml">Клиенты</Hyperlink>
        </TextBlock>
        <TextBlock Style="{StaticResource baseTextBlockResource}">
            <Hyperlink NavigateUri="contract.xaml">Договоры</Hyperlink>
        </TextBlock>
        <TextBlock Style="{StaticResource baseTextBlockResource}">
            <Hyperlink NavigateUri="reference.xaml">Справка</Hyperlink>
        </TextBlock>
        <Button Style="{StaticResource buttonResource}" Command="Close">Выход</Button>
    </StackPanel>
</Page>
